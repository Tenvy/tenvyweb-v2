// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model users {
  uuid         String    @id @unique @default(uuid())
  username     String    @unique
  nickname     String
  email        String    
  password     String
  role         String
  profileImage String?
  blogs        blogs[]
  project      projects[]
}

model introduction {
  id          String  @id @unique @default(cuid())
  title       String
  information String[]
  description String
}

model selectedHomeSection {
  section    String @unique
  selectedId String
}

model blogs {
  id          String   @id @unique @default(cuid())
  title       String   @unique
  description String
  content     String
  images      String[]
  publisher   users    @relation(fields: [usersUuid], references: [uuid])
  createdate  DateTime @default(now())
  usersUuid   String
}

model projects {
  id          String   @id @unique @default(cuid())
  title       String   @unique
  description String
  content     String?
  images      String
  techstack   projectTech[]
  siteUrl     String?
  sourceUrl   String?
  publisher   users    @relation(fields: [usersUuid], references: [uuid])
  createdate  DateTime @default(now())
  usersUuid   String
}

model technology {
  id          String  @id @unique @default(cuid())
  tech        String
  images      String?
  projects    projectTech[]
}

model projectTech {
  projectId  String
  project    projects @relation(fields: [projectId], references: [id])
  
  techId     String
  tech       technology @relation(fields: [techId], references: [id])

  @@id([projectId, techId])
}

model about {
  id          String  @id @unique @default(cuid())
  story       String @unique
  isSelected  Boolean
}

model career {
  company   String  @unique
  images    String?
  location  String
  position  String
  startDate DateTime
  endDate   DateTime
}

model education {
  school    String  @unique
  images    String?
  location  String
  degree    String?
  major     String
  startDate DateTime
  endDate   DateTime?
}